<div class = "container">
	<div class="row">
	  <div class="col-md-4 col-md-offset-7">
	  
	    <%= form_for(:session, url: login_path) do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>
	      <br>
	      <%= f.submit "Log in", class: "col-md-6 btn btn-primary" %>
	    <% end %>

	    <%= link_to "Sign Up", signup_path, class: "col-md-6 btn btn-default"%>

	  </div>
	</div>
</div>