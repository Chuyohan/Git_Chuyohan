<div id = "login_box" class="row">
<h1> Sign Up </h1>
<br>
<br>
<div class="form-horizontal">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <div class = "form-group">
      <%= f.label :name, class: 'col-md-2' %>
        <div class = "col-md-10">
        <%= f.text_field :name, class: 'form-control', placeholder: "name" %>
        </div>
      </div>

      <div class = "form-group">
      <%= f.label :id, class: 'col-md-2' %>
        <div class = "col-md-10">
        <%= f.email_field :email, class: 'form-control', placeholder: "email" %>
        </div>
      </div>

      <div class = "form-group">
      <%= f.label :password, class: 'col-md-2' %>
        <div class = "col-md-10">
        <%= f.password_field :password, class: 'form-control', placeholder: "password" %>
        </div>
      </div>
  
      <div class = "form-group">
      <%= f.label :password_confirmation, "Confirmation" ,class: 'col-md-2' %>
        <div class = "col-md-10">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "password" %>
        </div>
      </div>

      <br>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
