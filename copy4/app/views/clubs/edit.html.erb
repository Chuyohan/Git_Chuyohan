 <div class="row", id = "club_new">
 <div class = "container", id = "apply_form">
  <div class="col-md-6 col-md-offset-3" >
  <div id = "center">
    <h3> Club Post </h3>
  </div>
   <hr>
    <%= form_for(@club, html: { multipart: true }) do |f| %>
      <%= render 'shared/club_error_messages' %>

      <%= f.label :name %>      
      <%= f.text_field :name, class: 'form-control' %>

      <br>
      <div class = "col-md-6" style = "padding-left: 0px; padding-right: 0px">
        <%= f.label :category %>
        <%= f.select :category, [['연극', 'play'], ['문화', '문화'], ['체육', '체육'], ['학술', '학술'], ['봉사', '봉사'], ['종교', '종교']] , class: 'form-control'%>
      </div>

      <div class = "col-md-6" style = "padding-left: 0px; padding-right: 0px">
        <%= f.label :personnel %>
        <%= f.select :personnel, [['1~10명', "1~10명"], ['11~20명', '11~20명'], ['20명 이상', '20명 이상']], class: 'form-control' %>
      </div>

      <br><br>

      <%= f.label :intro %>
      <%= f.text_field :intro, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :history %>
      <%= f.text_field :history, class: 'form-control' %>

      <%= f.label :picture %>

      <span class="picture">
        <%= f.file_field :picture %>
      </span>

      <%= f.fields_for :albums do |a| %>
        <div class = "field">
          <%= a.label :image %><br>
          <%= a.file_field :image, multiple: true, name: "albums[image][]" %>
        </div>
      <% end %>

      <div id = "center">
        <br>
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</div>