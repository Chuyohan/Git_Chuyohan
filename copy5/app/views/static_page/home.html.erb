<% else %>
	<br>
	<h1 id ="center"><strong> Introduce Club in Sejong University. </strong></h1>

	<% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>"><%= message %></div>
	<% end %>

	<!-- 로그인 구간 -->
	<div class="jumbotron" id = "login">
		<div class = "container">
			<div class="row">
			  <div class="col-md-4 col-md-offset-7">
			  
			    <%= form_for(:session, url: login_path) do |f| %>

			      <%= f.label :email %>
			      <%= f.email_field :email, class: 'form-control' %>

			      <%= f.label :password %>
			      <%= f.password_field :password, class: 'form-control' %>
			      <br>
			      <%= f.submit "Log in", class: "col-md-6 btn btn-primary" %>
			    <% end %>

			    <%= link_to "Sign Up", signup_path, class: "col-md-6 btn btn-default"%>

			    <%= link_to "Facebook Login", "/auth/facebook", class: "col-md-12 btn btn-info",id: "sign_in"  %>
			  </div>
			</div>

		</div>
	</div>

