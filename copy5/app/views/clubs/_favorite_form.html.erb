<div id="favorite_form">
<% if current_user.favorite?(@club) %>


    <%= form_for(current_user.clubs.find_by(id: @club.id),
								            html: { method: :delete },
								            remote: true) do |f| %>
 		<%= f.submit "Unfollow", class: "btn" %>
	<% end %>


<% else %>


    <%= form_for(current_user.clubs.build, remote: true) do |f| %>
  		<div><%= hidden_field_tag :id, @club.id %></div>
  		<%= f.submit "Follow", class: "btn btn-primary" %>
	<% end %>
	

<% end %>
</div>
